@{
    var controller = this.ViewContext.RouteData.Values["controller"];

    switch (controller.ToString().ToLower())
    {
        case "auth":
            Layout = "~/Views/Shared/_AuthLayout.cshtml";
            break;
        case "product":
            Layout = "~/Views/Shared/_AuthLayout.cshtml";
            break;
        case "home":
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}